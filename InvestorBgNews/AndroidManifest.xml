<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="ivan.davidov.investor.rssreader"
      android:versionCode="4"
      android:versionName="1.2">
      
      <uses-sdk android:minSdkVersion="5" 
                android:targetSdkVersion="5" />
    
      <uses-permission
        android:name="android.permission.INTERNET" /> 
      
    <application android:icon="@drawable/icon"
        		 android:label="@string/app_name"
        		 android:allowBackup="true">
        <activity android:name=".RssActivity"
                  android:label="@string/default_text">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    	<receiver android:name=".widget.RssWidget" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/rss_widget_provider" />
        </receiver>
    </application>


</manifest> 